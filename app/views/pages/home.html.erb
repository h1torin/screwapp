   <style>
     body {background-color: orange;}
   </style>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="logo-and-text middled">
        <div class="screw-app-name">Screw App</div>
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
              <div class="home-banner">
                <%= image_tag('home.png', class: "home-pic middled") %>
              </div>
            </div>
          </div>
        <div class="screw-home-headline middled"> If life gives you screw-ups, make Screws out of them! </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-centers">
    <div class="col-md-6">
      <div class="buttons d-flex justify-between mb-6">
        <% if user_signed_in? %>
          <h1>Welcome to our page</h1>
        <% else %>
         <%= link_to "Log in", new_user_session_path, class: "blue-button" %>
         <%= link_to "Sign up", new_user_registration_path, class: "white-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


