<div class="container">
  <div class="col-md-6">
    <h1>Screwfeed</h1>
  </div>

  <div class="column">
    <% @posts.each do |post| %>
    <div class="col-md-6">
          <% unless post.hide_content? %>
           <p><%= post.content %></p>
          <% end %>
          <% if post.photo.attached? %>
            <image src="<%= (url_for(post.photo)) %>" style="width: 250px; height: 200px;">
          <% end %>
          <br>
          <%= link_to edit_post_url(post) do %>
            <span title="Edit the post"><i class="bi bi-screwdriver"></i></span>
          <% end %>
          <%= link_to post_path(post),
              method: :delete,
              data: { confirm: "Are you sure?"} do %>
            <span title="Delete the post"><i class="bi bi-trash" style="color:red;"></i></span>
          <% end %>
          <%= link_to "Like (#{post.reactions.count})", post_reactions_path(post), #if the user liked the post, they can remove the like and then we use delete method. if not, we use the current logic
              method: :post %>
    </div>
    
    <% end %>
  </div>


</div>


