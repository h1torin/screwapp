
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="screw-headline">Wanna share a screw?</div>
      <%= simple_form_for @post do |f| %>
        <%= f.input :content,
                    label: "Write your post here",
                    required: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.association :category,
                          label: "Select a category", collection: Category.all %>

        <%= f.input :photo, as: :file %>
        <%= f.input :hide_content %>
        <%= f.input :hide_user %>
        <%= f.submit "Create your post", class: "btn-primary btn-rounded-white" %>
      <% end %>

    </div>
  </div>
</div>

